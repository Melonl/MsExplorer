<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_filelist_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_item_selector"
    android:minHeight="64dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_filelist_iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="12dp"
        android:src="@drawable/folder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_filelist_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="bottom|left"
            android:paddingLeft="4dp"
            android:paddingRight="16dp"
            android:text="bigyfvtdtcdvfhgvjhnihkuunhuhbuhbnghjkbgukhujuhhijiokionjuihnybfvdvrdgfgfjhbkjh"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_filelist_subtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="top|left|center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="16dp"
            android:text="Text"
            android:textColor="@color/black_semi_transparent"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?android:attr/dividerVertical" />


    </LinearLayout>

</LinearLayout>